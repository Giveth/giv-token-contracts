{
  "name": "hardhat-project",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "csv2json": "ts-node scripts/csv2json.ts ./files/GIV_tokens_-_AIRDROP_TEST_LIST.csv ./files/merkle_distributor.json",
    "generate-merkle-root": "ts-node scripts/generate-merkle-root.ts --input ./files/merkle_distributor.json --output ./files/merkle_distributor_result.json",
    "test:tokenGranting": "npx hardhat test test/TokenGranting/*.test.js",
    "test:tokenGranting:gas": "REPORT_GAS=true npx hardhat test test/TokenGranting/TokenGesting.test.js",
    "test:tokenGranting:coverage": "npx hardhat coverage --testfiles test/TokenGranting --solcoverjs test/TokenGranting/.solcover.js",
    "deploy:local": "TS_NODE_FILES=true ts-node scripts/deploy_merkle_tokendistro.ts",
    "deploy:rinkeby": "HARDHAT_NETWORK=rinkeby TS_NODE_FILES=true ts-node scripts/deploy_merkle_tokendistro.ts"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.0.0",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.9.0",
    "chai": "^4.3.4",
    "commander": "^8.0.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.4.1",
    "hardhat": "^2.4.1",
    "hardhat-gas-reporter": "^1.0.4",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0"
  },
  "license": "GPL-3.0"
}
